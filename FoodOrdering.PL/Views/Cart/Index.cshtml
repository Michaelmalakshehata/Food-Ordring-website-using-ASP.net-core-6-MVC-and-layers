@model CartUpdateViewModel
@{
 ViewData["Title"] = "Cart";
    Layout = "_Layout";
    Pager pager=new Pager();
    int pageNo=0;
    if(ViewBag.Pager is not null)
    {
        pager = ViewBag.Pager;
        pageNo = pager.CurrentPage;
    }
}
<div class="heading">
   <h3>shopping cart</h3>
   <p><a asp-action="Index" asp-controller="Home" >home </a> <span> / cart</span></p>
</div>

<section class="products">

   <h1 class="title">your cart</h1>

    @if (ViewBag.list != null)
    {
        <div class="cart-total">

            <p>grand total : <span>$ @ViewBag.price</span></p>
            <a asp-action="AddOrder" asp-controller="Order" class="btn">checkout orders</a>
        </div>

        <div class="box-container">
            @foreach (var item in ViewBag.list)
            {
                <div class="box">
                    <a class="fas fa-times" asp-action="DeleteCartItem"  asp-controller="Cart" asp-route-Id="@item.Id" style="text-decoration:none;padding:auto 4px ;color:red;font-size:20px" onclick="return confirm('you sure to delete this item @item.Ordername ?')"></a>
                    <img src="~/uploaded_img/@item.imgpath" alt="">
                    <div class="name">@item.Ordername</div>
                    <div class="flex">
                        <div class="price"><span>$</span>@item.Price</div>
                        <Form asp-action="UpdateCart" asp-controller="Cart" >
                            <input type="hidden"asp-for="Id" value="@item.Id"/>
                            <input type="hidden"asp-for="Ordername" value="@item.Ordername"/>
                            <input type="hidden"asp-for="imgpath" value="@item.imgpath"/>
                            <input type="hidden"asp-for="Price" value="@item.Price"/>
                            <input type="hidden"asp-for="UserId" value="@item.UserId"/>
                            <input type="number"asp-for="Quantity" value="@item.Quantity" class="qty" min="1" max="99">
                            <button type="submit" class="fas fa-edit"></button>
                        </Form>
                    </div>
                    <div class="sub-total">sub total : <span>$@item.SubTotalPrice</span></div>
                </div>
            }

        </div>
         <br />
   <nav arai-label="...">
            @if(pager.TotalPages>0)
            {
                <ul class="pagination justify-content-center pagination-lg">
                    @if(pager.CurrentPage>1)
                    {
                        <li class="page-item">
                            <a class="page-link"asp-action="Index" asp-controller="Cart" asp-route-pg="1">Frist</a>
                        </li>  
                        <li class="page-item">
                            <a class="page-link"asp-action="Index" asp-controller="Cart" asp-route-pg="@(pager.CurrentPage-1)">Previous</a>
                        </li>
                    }
                    @for(var pge =pager.StartPage;pge <= pager.EndPage;pge++)
                    {
                        <li class="page-item" @(pge==pager.CurrentPage? "active" :"")>
                            <a class="page-link"asp-action="Index" asp-controller="Cart" asp-route-pg="@pge">@pge</a>
                        </li>
                    }
                    @if(pager.CurrentPage<pager.TotalPages)
                    {
                       <li class="page-item">
                            <a class="page-link"asp-action="Index" asp-controller="Cart" asp-route-pg="@(pager.CurrentPage+1)">Next</a>
                        </li> 
                        <li class="page-item">
                            <a class="page-link"asp-action="Index" asp-controller="Cart" asp-route-pg="@(pager.TotalPages)">Last</a>
                        </li> 
                    }

                </ul>
            }
        </nav>
        <div class="more-btn">
            <a asp-action="DeleteAllCartItems" asp-controller="Cart" class="delete-btn" onclick="return confirm('delete all from cart?');">delete all</a>
        </div>
        }
   else
    {
        <div class="more-btn">
          <a asp-action="Index" asp-controller="ShowMenu" class="delete-btn">Add Frist Item To Cart</a>
       </div>
    }
 </section>
 @section Scripts{
    <partial name="_ValidationScriptsPartial" />
}