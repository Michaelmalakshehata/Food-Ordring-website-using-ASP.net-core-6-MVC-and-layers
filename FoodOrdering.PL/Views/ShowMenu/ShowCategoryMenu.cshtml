@model CartViewModel
@{
    ViewData["Title"] = "Category";
    Layout = "_Layout";
    Pager pager=new Pager();
    int pageNo=0;
    if(ViewBag.pager is not null)
    {
        pager = ViewBag.pager;
        pageNo = pager.CurrentPage;
    }
}
<div class="heading">
   <h3>our menu</h3>
   <p><a asp-action="Index" asp-controller="Home">home </a> <span> / menu</span></p>
</div>

<section class="products">

   <h1 class="title">Category</h1>

   <div class="box-container">
       @foreach(var item in ViewBag.list)
       {
    <form asp-action="AddToCart"asp-controller="Cart" class="box">
            <input type="hidden"asp-for="Ordername" value="@item.Ordername" />
            <input type="hidden" asp-for="Price" value="@item.Price"/>
            <input type="hidden" asp-for="imgpath" value="@item.imgpath"/>
         <a asp-action="ShowDetailes" asp-controller="ShowMenu" asp-route-Id="@item.MenuId" class="fas fa-eye"></a>
         <button class="fas fa-shopping-cart" type="submit" name="add_to_cart"></button>
         <img src="~/uploaded_img/@item.imgpath" alt="">
         <div class="name">@item.Ordername</div>
         <div class="flex">
            <div class="price"><span>$</span>@item.Price<span>/-</span></div>
            <input type="number" asp-for="Quantity" class="qty" min="1" max="99">
         </div>
      </form>
            
        }

   </div>
   <br />
   <nav arai-label="...">
            @if(pager.TotalPages>0)
            {
                <ul class="pagination justify-content-center pagination-lg">
                    @if(pager.CurrentPage>1)
                    {
                        <li class="page-item">
                            <a class="page-link"asp-action="ShowCategory" asp-controller="ShowMenu" asp-route-pg="1">Frist</a>
                        </li>  
                        <li class="page-item">
                            <a class="page-link"asp-action="ShowCategory" asp-controller="ShowMenu" asp-route-pg="@(pager.CurrentPage-1)">Previous</a>
                        </li>
                    }
                    @for(var pge =pager.StartPage;pge <= pager.EndPage;pge++)
                    {
                        <li class="page-item" @(pge==pager.CurrentPage? "active" :"")>
                            <a class="page-link"asp-action="ShowCategory" asp-controller="ShowMenu" asp-route-pg="@pge">@pge</a>
                        </li>
                    }
                    @if(pager.CurrentPage<pager.TotalPages)
                    {
                       <li class="page-item">
                            <a class="page-link"asp-action="ShowCategory" asp-controller="ShowMenu" asp-route-pg="@(pager.CurrentPage+1)">Next</a>
                        </li> 
                        <li class="page-item">
                            <a class="page-link"asp-action="ShowCategory" asp-controller="ShowMenu" asp-route-pg="@(pager.TotalPages)">Last</a>
                        </li> 
                    }

                </ul>
            }
        </nav>
</section>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}