@model List< Categories>
@{
    ViewData["Title"] = "Deleted Categories";
    Layout = "_AdminLayout";
}
@section stylecss{
    <style>
        #content
        {
           flex-grow: 1;
           height: 30rem;
           width:80%;
           margin:0 auto;
           overflow: auto; 
           font-size:16px;
        }
        /*#btn
        {
            font-size:14px;
            padding:3px;
            margin:auto;
            width:70px;
            height:25px;
        }*/
    </style>
}
<div style="margin-top:30px">
    <div id="content" >

        <table class="table table-bordered mt-3">
            <thead class=" text-center" style="background:#2b6777 ;color:white">
                <tr style="margin:auto">
                     <th>Code</th>
                     <th>Name</th>
                     <th>Date and Time</th>
                     <th>Is Deleted</th>
                     <th>Options</th>
                 </tr>
             </thead>
             <tbody class="m-1">
               @foreach(var itm in Model)
                {
                    <tr style="margin:auto">
                        <td>@itm.Id</td>
                        <td>@itm.Name</td>
                        <td>@itm.Date</td>
                        <td>@itm.IsDeleted</td>
                        <td>
                            <a asp-action="RestoreCategory" id="btn" asp-controller="Category"asp-route-id="@itm.Id"onclick="return confirm('are you sure to restore this item @itm.Name')" class="btn btn-success">Restore</a>

                        </td>
                    </tr>
        
                }
            </tbody>
        </table>
    </div>
</div>